<div class="center-block w-xxl w-auto-xs p-y-md">
  <div class="navbar">
    {{! <div class="pull-center">
      <div ui-include="'../views/blocks/navbar.brand.html'"></div>
    </div> }}
  </div>
  <div class="p-a-md box-color r box-shadow-z1 text-color m-a">
    <div class="m-b text-md">
      Login to Admin Panel
    </div>
    {{#if logErr}}
      <div style="text-align: center;">
        <p class="badge" id="errorBadge" style="color: red; font-size:0.9rem;">
          {{logErr}}
        </p>
      </div>
    {{/if}}
    <form
      name="form"
      action="/admin/admin-login"
      onsubmit="return(validateLogin())"
      method="POST"
    >
      <div class="md-form-group float-label">
        <input
          type="email"
          name="email"
          id="email"
          class="md-input"
          {{! required  }}
        />
        <label>Enter Username</label>
      </div>
      <div class="md-form-group float-label">
        <input
          name="password"
          id="password"
          type="password"
          class="md-input"
          {{! required  }}
        />
        <label>Password</label>
      </div>
      <div class="m-b-md">
        <label class="md-check">
          <input type="checkbox" /><i class="primary"></i>
          Keep me signed in
        </label>
      </div>
      <button type="submit" class="btn primary btn-block p-x-md">Sign in</button>
    </form>
  </div>

  {{! <div class="p-v-lg text-center">
    <div class="m-b"><a
        href="forgot-password.html"
        class="text-primary _600"
      >Forgot password?</a></div>
    <div>Do not have an account?
      <a
        ui-sref="access.signup"
        href="signup.html"
        class="text-primary _600"
      >Sign up</a></div>
  </div> }}
</div>

{{! <script>
  let email = document.getElementById('email'); 
  let password = document.getElementById('password'); 
  let credErr = document.getElementById('errorBadge'); 
  function validateLogin(){
  if(email.value.length === 0 || password.value.length === 0){ 
    credErr.innerHTML = 'Please Fill all fields' 
    return false
    } else{
      return true
    }
  }

</script> }}